{
    "name": "amirmehr-ir/mehrutils",
    "description": "a laravel auth, sms, .. package",
    "keywords": [
        "amirmehr-ir",
        "mehrutils"
    ],
    "homepage": "https://github.com/amirmehr-ir/mehrutils",
    "license": "MIT",
    "authors": [
        {
            "name": "Amir Hosein Sharifi",
            "email": "amirhoseinsharifimehr@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "AmirMehr\\MehrUtils\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AmirMehr\\MehrUtils\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
